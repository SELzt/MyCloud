<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/popup_item_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_outline_insert_drive_file_24"
        />
    <TextView
        android:id="@+id/popup_item_filename"
        android:maxEms="18"
        android:singleLine="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="文件名"

        android:layout_toRightOf="@id/popup_item_img"
        android:textColor="@color/black"
        />
    <ProgressBar
        android:id="@+id/transmissionProgress"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_alignLeft="@id/popup_item_filename"
        android:layout_alignParentRight="true"
        android:layout_below="@id/popup_item_filename"
        android:layout_marginRight="10dp"
        android:progress="50"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        />
    <TextView
        android:id="@+id/popup_item_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50%"
        android:textColor="@color/black"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        />
    <TextView
        android:id="@+id/popup_item_uploadTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/transmissionProgress"
        android:textColor="@color/black"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="上传量"
        />
</RelativeLayout>
</androidx.cardview.widget.CardView>