<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:id="@+id/cvMenuUser"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            android:layout_margin="5dp"
            >
            <ImageView
                android:id="@+id/ivMenuUser"
                android:src="@color/black"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
        <ImageView
            android:id="@+id/ivMenuBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="5dp"
            android:visibility="invisible"
            android:src="@drawable/ic_baseline_keyboard_backspace_24"
            />
        <ImageView
            android:id="@+id/ivPopMenu"
            android:layout_margin="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_baseline_menu_24"
            />
        <ImageView
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:src="#BFBFBF"
            android:layout_below="@id/cvMenuUser"
            />
        <com.scwang.smart.refresh.layout.SmartRefreshLayout
            android:id="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/cvMenuUser">
            <com.scwang.smart.refresh.header.ClassicsHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/homeRecycleView"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />
        </com.scwang.smart.refresh.layout.SmartRefreshLayout>
    </RelativeLayout>
    <!-- android:layout_gravity="start"-->
    <RelativeLayout
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/white"
        >
        <RelativeLayout
            android:id="@+id/rlHomeLeftUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/cvUserimg"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="60dp">
                <ImageView
                    android:id="@+id/ivUserimg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_launcher_background"
                    />
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/tvHomeRolename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="用户名"
                android:textColor="@color/black"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/cvUserimg"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rlHomeLeftUser">
            <RelativeLayout
                android:id="@+id/rtFavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ivFavorite"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_baseline_favorite_border_24"/>
                <TextView
                    android:id="@+id/tvFavorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginLeft="5dp"
                    android:textSize="20dp"
                    android:text="收藏"
                    android:layout_toRightOf="@id/ivFavorite"
                    android:layout_alignTop="@id/ivFavorite"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="20dp"
                android:id="@+id/rtShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rtFavorite"
                >
                <ImageView
                    android:id="@+id/ivShare"
                    android:src="@drawable/ic_baseline_share_24"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    />
                <TextView
                    android:id="@+id/tvShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginLeft="5dp"
                    android:textSize="20dp"
                    android:text="分享"
                    android:layout_toRightOf="@id/ivShare"

                    />
            </RelativeLayout>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="退出登陆"
            android:textColor="@color/black"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>