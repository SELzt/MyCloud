<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/transmissionBarLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/transmissionBackBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_keyboard_backspace_24"
            />
        <ImageView
            android:background="#BFBFBF"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="2dp"
            android:layout_below="@id/transmissionBackBtn"
            />
    </RelativeLayout>
<RelativeLayout
    android:id="@+id/transmissionActionLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/transmissionBarLayout"
    >
    <RelativeLayout
        android:layout_alignParentRight="true"
        android:id="@+id/transmissionStateChangeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvPopupState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在上传"
            android:textSize="20dp"
            android:textColor="@color/black"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tvPopupState"
            android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#BFBFBF"
        android:layout_below="@id/transmissionStateChangeLayout"
        />
</RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="5dp"
        android:id="@+id/transmissionRecycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/transmissionActionLayout"
        >

    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>